encoding_maps = {}
def dynamic_encode(column):
    encoding_map = {}
    encoded_values = []
    current_max = 0

    for value in column:
        if value not in encoding_map:
            encoding_map[value] = current_max
            current_max += 1
        encoded_values.append(encoding_map[value])

    return encoded_values, encoding_map

